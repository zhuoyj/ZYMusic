<!--pages/home-music/index.wxml-->
<!-- 搜索框-->
<van-search
 disabled
 background="#fafafa"
 shape="round"
 placeholder="搜索您喜欢的歌曲"
 bind:click-input="handleSearchClick"
/>

<!-- 轮播图-->
<swiper class="swiper"
        indicator-dots
        autoplay
        circular
        style="height: {{swiperHeight}}px;">
  <block wx:for="{{banners}}" wx:key="bannerId">
    <swiper-item class="swiper-item">
      <image class="swiper-image" src="{{item.pic}}" mode="widthFix" bindload="handleSwiperImageLoaded"> </image>
    </swiper-item>
  </block>
</swiper>

<!--推荐歌曲-->
<view class="recommend-song" wx:if="{{recommendSongs.length>0}}">
  <area-header title="推荐歌曲" bind:headerClick="handleMoreClick">   <!--监听子组件发出的headerClick事件-->
  </area-header>
  <view class="song-list">
      <block wx:for="{{recommendSongs}}" wx:key="id">
        <song-item-v1 item="{{item}}" bindtap="handleSongItemClick" data-index="{{index}}"></song-item-v1>
      </block>
    </view>
</view>

<!-- 热门歌单-->
<song-menu-area songMenu="{{hotSongMenu}}" title="热门歌单" wx:if="{{hotSongMenu.length>0}}"></song-menu-area>

<!-- 推荐歌单-->
<song-menu-area songMenu="{{recommendSongMenu}}" title="推荐歌单" wx:if="{{recommendSongMenu.length>0}}"></song-menu-area>

<!-- 巅峰榜-->
<view class="ranking">
  <area-header title="巅峰榜" showRight="{{false}}"></area-header>
  <view class="ranking-list">
    <block wx:for="{{rankings}}" wx:key="name">
      <ranking-area-item 
            item="{{item}}" 
            bindtap="handleRankingItemClick" 
            data-idx="{{index}}"></ranking-area-item><!-- 这里的data-idx会传入到点击事件函数里的event-->
    </block>
  </view>
</view>

<!-- 播放工具栏 -->
<view class="play-bar-placeholder" wx:if="{{currentSong.id}}"></view>
<view class="play-bar" wx:if="{{currentSong.id}}" bindtap="handlePlayBarClick">
  <view class="left">
    <image class="album album-anim" 
           style="animation-play-state: {{playAnimState}};"
           mode="aspectFill" 
           src="{{currentSong.al.picUrl}}"></image>
    <view class="name">{{currentSong.name}}</view>
  </view>
  <view class="right">
    <image class="icon play" 
           src="/assets/images/music/{{ isPlaying ? 'pause': 'play' }}_icon.png"
           catchtap="handlePlayBtnClick"></image>
           <!-- catchtap事件不会向上传递 -->
    <image class="icon playlist" src="/assets/images/music/playlist_icon.png"></image>
  </view>
</view>